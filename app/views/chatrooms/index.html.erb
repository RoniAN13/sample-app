<div class="row">
  <div class="col-md-2" >
  <h5> Hi <%= @current_user.name %> </h5>
  
 
  <h4> Users </h4>
  <%= turbo_stream_from "users" %>
<div id="users">
  <%= render @users.order(created_at: :desc) , img: false %>
  </div>
</div>
<div class="col-md-10 bg-dark text-light ">
  <% if @single_room %>
  <h4 class="text-center"> <%= @user&.name || @single_room.name %> </h4>
    <%= turbo_stream_from @single_room %>
    <div id="messages">
   <%= render @messages %>
  </div>

  <% end %>
 
</div>
<div>
<%= render partial: 'layouts/new_message_form' if @single_room %>
</div>
</div>